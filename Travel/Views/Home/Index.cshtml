@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h1>All Reviews:</h1>

<ol>
@foreach (Review review in Model)
{
    <ul>
        <li>ID: @review.ReviewId</li>
        <li>Name: @review.Name</li>
        <li>City: @review.City</li>
        <li>Country: @review.Country</li>
        <li>Rating: @review.Rating</li>
        <li>Description: @review.Description</li>
    </ul>
    <a href="/Reviews/Details/@(review.ReviewId)"><p>View Details</p></a>
    <br>
}
</ol>
